---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils/date";

type Props = {
  post: CollectionEntry<"blog">;
};

const {
  post: {
    data: { title, date },
    slug,
  },
} = Astro.props;
---

<a
  href={`/blog/${slug}`}
  class="border border-neutral-700 bg-neutral-800 rounded flex items-center justify-between px-3 py-4 w-full"
>
  <div class="flex flex-col">
    <p class="font-bold text-neutral-100">{title}</p>
    <span class="opacity-60">{formatDate(date)}</span>
  </div>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-arrow-up-right text-neutral-300"
    ><path d="M7 7h10v10"></path><path d="M7 17 17 7"></path>
  </svg>
</a>
